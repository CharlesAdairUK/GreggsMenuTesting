{
  "name": "greggsmenutesting",
  "version": "1.0.0",
  "description": "Comprehensive automated testing framework for Greggs.com menu functionality covering UI, accessibility, performance, and functional testing using Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:desktop": "playwright test --project='Desktop Chrome'",
    "test:all-browsers": "playwright test --project='Desktop Chrome' --project='Desktop Firefox' --project='Desktop Safari'",
    "test:accessibility": "playwright test tests/specs/accessibility.spec.ts",
    "test:performance": "playwright test tests/specs/performance.spec.ts",
    "test:responsive": "playwright test tests/specs/responsive-design.spec.ts",
    "report": "playwright show-report",
    "install-browsers": "playwright install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CharlesAdairUK/GreggsMenuTesting.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CharlesAdairUK/GreggsMenuTesting/issues"
  },
  "homepage": "https://github.com/CharlesAdairUK/GreggsMenuTesting#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "typescript": "^5.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0"
  }
}
